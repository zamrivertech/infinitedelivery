<div class="toast position-fixed bottom-0 end-0 m-3 bg-dark text-<%= variant || 'primary' %> border-light" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1055;">
  <div class="toast-header bg-dark text-light">
    <strong class="me-auto"><%= header || "INDEL" %></strong>
    <small><%= timestamp || "Agora mesmo" %></small>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Fechar"></button>
  </div>
  <div class="toast-body">
    <%= body %>
  </div>
</div>
