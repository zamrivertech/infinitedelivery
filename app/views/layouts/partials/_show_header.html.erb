<%# layouts/partials/show_header.html.erb %>
<div class="d-flex justify-content-between align-items-center pt-3 pb-3 border-bottom mb-2">
  <%= link_to "Voltar", back_path, class: "btn btn-sm btn-secondary" %>

  <div>
    <% if record.present? %>
      <%= link_to "Atualizar", edit_path, class: "btn btn-sm btn-primary me-2" %>

      <button type="button" class="btn btn-sm btn-danger me-2" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= record.id %>">
        Apagar
      </button>

<%= render partial: "layouts/partials/confirmation_modal", locals: {
  modal_id: "deleteModal-#{record.id}",
  modal_label_id: "deleteLabel-#{record.id}",
  title: "Confirmar Remoção",
  message: "Tens a certeza que desejas apagar <strong>#{record.try(:full_name) || record.try(:name)}</strong>?".html_safe,
  path: delete_path,
  modal_class: "",
  dialog_class: "",
  content_class: "",
  header_class: "",
  body_class: "",
  footer_class: "",
  cancel_button: nil,
  confirm_button: nil
} %>


    <% end %>
  </div>
</div>
